<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/dashboardFragment">


    <fragment
        android:id="@+id/dashboardFragment"
        android:name="neel.com.shwalpomerchant.ui.fragments.DashboardFragment"
        android:label="dashboard_fragment"
        tools:layout="@layout/dashboard_fragment" >
        <action
            android:id="@+id/action_dashboardFragment_to_ordersFragment"
            app:destination="@id/ordersFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="neel.com.shwalpomerchant.ui.fragments.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="neel.com.shwalpomerchant.ui.fragments.OrdersFragment"
        android:label="orders_fragment"
        tools:layout="@layout/orders_fragment" />
</navigation>